    <center>
        <VBox fx:id="containerBox" alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="50.0" stylesheets="@assets/css/main.css" BorderPane.alignment="CENTER">
         <Text fill="#079e52" strokeType="OUTSIDE" strokeWidth="0.0" text="WELCOME TO NALE" textAlignment="CENTER" wrappingWidth="786.68115234375">
